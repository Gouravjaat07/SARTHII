    <script>
        // Sidebar toggle
        const sidebar = document.getElementById('sidebar');
        const sidebarToggle = document.getElementById('sidebarToggle');
        const menuIcon = document.getElementById('menuIcon');

        sidebarToggle.addEventListener('click', () => {
            sidebar.classList.toggle('-translate-x-full');
            if (sidebar.classList.contains('-translate-x-full')) {
                menuIcon.innerHTML = '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>';
            } else {
                menuIcon.innerHTML = '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>';
            }
        });

        // File upload handling
        const certDropZone = document.getElementById('certDropZone');
        const certFiles = document.getElementById('certFiles');
        const certFileList = document.getElementById('certFileList');
        let uploadedCertFiles = [];

        certDropZone.addEventListener('click', () => certFiles.click());

        certDropZone.addEventListener('dragover', (e) => {
            e.preventDefault();
            certDropZone.classList.add('dragover');
        });

        certDropZone.addEventListener('dragleave', () => {
            certDropZone.classList.remove('dragover');
        });

        certDropZone.addEventListener('drop', (e) => {
            e.preventDefault();
            certDropZone.classList.remove('dragover');
            handleCertFiles(e.dataTransfer.files);
        });

        certFiles.addEventListener('change', (e) => {
            handleCertFiles(e.target.files);
        });

        function handleCertFiles(files) {
            Array.from(files).forEach(file => {
                if (file.size <= 10 * 1024 * 1024) {
                    uploadedCertFiles.push(file);
                    displayCertFile(file);
                } else {
                    alert(`${file.name} exceeds 10MB limit`);
                }
            });
        }

        function displayCertFile(file) {
            const fileItem = document.createElement('div');
            fileItem.className = 'flex items-center justify-between p-3 bg-indigo-50 rounded-lg';
            fileItem.innerHTML = `
                <div class="flex items-center">
                    <svg class="w-5 h-5 text-indigo-600 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                    </svg>
                    <div>
                        <p class="text-sm font-medium text-gray-900">${file.name}</p>
                        <p class="text-xs text-gray-500">${(file.size / 1024).toFixed(1)} KB</p>
                    </div>
                </div>
                <button type="button" onclick="removeCertFile('${file.name}')" class="text-red-500 hover:text-red-700">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
                    </svg>
                </button>
            `;
            certFileList.appendChild(fileItem);
        }

        function removeCertFile(fileName) {
            uploadedCertFiles = uploadedCertFiles.filter(f => f.name !== fileName);
            const items = certFileList.querySelectorAll('div');
            items.forEach(item => {
                if (item.textContent.includes(fileName)) {
                    item.remove();
                }
            });
        }

        // Form submission
        document.getElementById('analysisForm').addEventListener('submit', (e) => {
            e.preventDefault();
            
            // Show roadmap section and hide form
            document.getElementById('new-analysis').classList.add('hidden');
            document.getElementById('generatedRoadmap').classList.remove('hidden');
            
            // Simulate AI processing
            setTimeout(() => {
                document.getElementById('processingSection').classList.add('hidden');
                document.getElementById('roadmapResults').classList.remove('hidden');
                
                // Scroll to results
                document.getElementById('roadmapResults').scrollIntoView({ behavior: 'smooth' });
            }, 3000);
        });

        function showAnalysisForm() {
            document.getElementById('generatedRoadmap').classList.add('hidden');
            document.getElementById('new-analysis').classList.remove('hidden');
            document.getElementById('new-analysis').scrollIntoView({ behavior: 'smooth' });
        }

        function viewRoadmap(type) {
            // Show the roadmap section
            document.getElementById('generatedRoadmap').classList.remove('hidden');
            document.getElementById('processingSection').classList.add('hidden');
            document.getElementById('roadmapResults').classList.remove('hidden');
            
            // Scroll to roadmap
            document.getElementById('generatedRoadmap').scrollIntoView({ behavior: 'smooth' });
        }

        // Smooth scrolling
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({ behavior: 'smooth', block: 'start' });
                    if (window.innerWidth < 1024) {
                        sidebar.classList.add('-translate-x-full');
                        menuIcon.innerHTML = '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>';
                    }
                }
            });
        });
